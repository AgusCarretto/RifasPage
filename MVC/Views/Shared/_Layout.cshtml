<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nav-bar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black sticky-top shadow-sm">
            <div class="container">
                @if (Context.Session.GetString("admin") != null)
                {
                    <a class="navbar-brand fw-bold text-success" asp-controller="Admin" asp-action="Dashboard">LONDRES 2027 <span class="badge bg-danger ms-2" style="font-size: 0.5rem;">ADMIN</span></a>
                }
                else
                {
                    <a class="navbar-brand fw-bold" href="#">LONDRES 2027</a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">

                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index#descripcion">Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index#rifas">Elegir Números</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index#premios">Premios</a>
                        </li>
                       

                        @if (Context.Session.GetString("admin") != null)
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="btn btn-outline-warning btn-sm fw-bold" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2"></i> DASHBOARD
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-londres mt-5">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                    <h4 class="footer-brand">LONDRES 2027</h4>
                    <p class="text-muted small mb-0">© 2026 Todos los derechos reservados.</p>
                </div>

                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <div class="footer-contact">
                        <span class="d-block text-uppercase fw-bold mb-2" style="font-size: 0.7rem; letter-spacing: 2px;">Soporte & Dudas</span>
                        <a href="https://wa.me/59892114480"
                           target="_blank"
                           class="btn btn-outline-success btn-sm rounded-pill px-3">
                            <i class="bi bi-whatsapp me-1"></i> Contactar por WhatsApp
                        </a>
                    </div>
                </div>

                <div class="col-md-4 text-center text-md-end">
                    <p class="small text-muted mb-0">Desarrollado por Agustin Carretto.</p>
                    <a asp-controller="Admin" asp-action="Login" class="admin-link">Panel de Administración</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
